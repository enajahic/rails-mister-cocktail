<div class="">
  <div class="sticky mb-3 navbar-lewagon navbar-fixed-top">  
    <div class="row">
      <div class="col">
         <a class="navbar-lewagon-brand" href="/">
          <%= image_tag "logo.png", alt: "Logo Cockails", width: 100 %>
        </a>
        <span class="title-logo"> Micko-Made Cocktail </span>
      </div>
      <div class="col">
        <div class="navbar-lewagon-right hidden-xs hidden-sm">
            <a class="btn btn-primary btn-small my-btn  float-right mr-3 mt-3" href="/cocktails/new">Create Cocktail</a>
        </div>
      </div>
    </div>  
</div>  

<div>
<div class="banner-image d-flex" style="background-image: url('<%= image_path @cocktail.picture %>');">
  <h1 class="banner-title d-justify-self-center m-auto"><%= @cocktail.name %></h1>
</div>

<div class="col-12 col-sm-6 mx-auto">
    <div class="d-flex">
      <h1>Ingredients</h1>
      <div class="ingredients-button">
        <div  data-toggle="modal" data-target="#exampleModal" class="btn btn-outline-secondary btn-hover-container" data-toggle="modal" data-target="#editIngredients">
          <i class="far fa-edit"></i> Add a new dose
        </div>
      </div>
    </div>
    <ul class="list-ingredients list-group">
    <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
        <%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to "Delete dose", dose_path(dose), method: :delete %>
      </li>
    <% end %>
    </ul>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Our cocktail recipe</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h3>Ingredients</h3>
        <ul class="list-ingredients">
            <li class="d-flex justify-content-between mx-auto w-75"><span>6 parts of Watermelon</span> <a data-toggle="modal" data-target="#deleteIngredient196"><i class="far fa-trash-alt"></i></a></li>
            <li class="d-flex justify-content-between mx-auto w-75"><span>1 part of Vodka</span> <a data-toggle="modal" data-target="#deleteIngredient197"><i class="far fa-trash-alt"></i></a></li>
            <li class="d-flex justify-content-between mx-auto w-75"><span>7 parts of Lemon</span> <a data-toggle="modal" data-target="#deleteIngredient198"><i class="far fa-trash-alt"></i></a></li>
            <li class="d-flex justify-content-between mx-auto w-75"><span>8 parts of Lavander</span> <a data-toggle="modal" data-target="#deleteIngredient199"><i class="far fa-trash-alt"></i></a></li>
            <li class="d-flex justify-content-between mx-auto w-75"><span>6 parts of Fruit punch</span> <a data-toggle="modal" data-target="#deleteIngredient200"><i class="far fa-trash-alt"></i></a></li>
        </ul>

      <div class="">
        <h5>Add a new dose:</h5>
        <div>
          <%= simple_form_for([@cocktail, @dose]) do |f|%>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit class:"btn btn-primary"%>
          <% end %>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>

      </div>

    </div>
  </div>
</div>
</div>
