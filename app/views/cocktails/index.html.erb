      </form>
    </div>
  </div>

  <div class="container">
  <h1> Our unique cocktails, with finest ingredients</h1>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="card col-md-4">
        <%= link_to cocktail_path(cocktail) do %>
           <%= image_tag cocktail.picture, alt: "Cockail", width: "100%", height: 600 %>
           <% end %>
         </div>
      <% end %>
    </div>
